<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ezet.bartracker">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="23" />

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ViewExerciseActivity"
            android:label="@string/title_activity_debug"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".activities.ViewSetActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".activities.ViewExerciseActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ViewExerciseActivity" />
        </activity>
        <activity
            android:name=".activities.ViewRepActivity"
            android:label="@string/title_activity_rep_analyzer"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.DebugActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".activities.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>

        <!--<activity-->
        <!--android:name=".activities.NavigationDrawerActivity"-->
        <!--android:label="@string/title_activity_navigation_drawer"-->
        <!--android:theme="@style/AppTheme" />-->
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"/>

    </application>

</manifest>
